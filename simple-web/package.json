{
  "license": "Apache-2.0",
  "scripts": {
    "clean": "rimraf dist",
    "server": "browser-sync start -s dist -f dist --no-open --no-notify --no-ghost-mode",
    "ejs": "ejs-cli -b src '**/!(_)*.ejs' -o dist",
    "css": "postcss 'src/styles/**/!(_)*.css' -d dist/styles",
    "copy:static": "cpx 'src/static/**/{*,.*}' dist -u",
    "watch:static": "chokidar 'src/static' -c 'yarn copy:static'",
    "watch:ejs": "chokidar 'src/**/*.ejs' -c 'yarn ejs' --initial",
    "watch:css": "yarn css -w",
    "watch:js": "webpack --mode development --watch",
    "build:ejs": "NODE_ENV=production yarn ejs",
    "build:css": "NODE_ENV=production yarn css",
    "build:js": "webpack --mode production",
    "format:js": "prettier-eslint 'src/**/*.js' --write",
    "format:css": "stylelint 'src/**/*.css' --fix",
    "watch": "run-p watch:* server",
    "start": "run-s clean copy:* watch",
    "build": "run-s clean copy:* build:*",
    "format": "run-s format:*"
  },
  "dependencies": {
    "sanitize.css": "^5.0.0",
    "web-utility-js": "^0.0.4"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.49",
    "@babel/preset-env": "^7.0.0-beta.49",
    "babel-loader": "^8.0.0-beta",
    "browser-sync": "^2.24.4",
    "chokidar-cli": "^1.2.0",
    "cpx": "^1.5.0",
    "csswring": "^6.0.3",
    "ejs": "^2.6.1",
    "ejs-cli": "^2.0.1",
    "eslint": "^4.19.1",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-standard": "^3.1.0",
    "npm-run-all": "^4.1.3",
    "postcss": "^6.0.22",
    "postcss-cli": "^5.0.0",
    "postcss-cssnext": "^3.1.0",
    "postcss-import": "^11.1.0",
    "prettier": "^1.13.2",
    "prettier-eslint-cli": "^4.7.1",
    "rimraf": "^2.6.2",
    "stylelint": "^9.2.1",
    "stylelint-config-standard": "^18.2.0",
    "uglifyjs-webpack-plugin": "^1.2.5",
    "webpack": "^4.10.1",
    "webpack-cli": "^2.1.4"
  }
}
